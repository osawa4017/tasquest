.left-contents
  .left-contents__user-info
    .left-contents__user-info__basic
      .left-contents__user-info__basic__name
        = current_user.nickname
      = link_to edit_user_registration_path, class: "left-contents__user-info__basic__edit-user-btn" do
        ユーザー情報を変更する
    .left-contents__user-info__property
      .left-contents__user-info__property__num
        .left-contents__user-info__property__num__level
          = "Lv.#{@level}"
        .left-contents__user-info__property__num__point
          = "#{@total_points}pt"
      .left-contents__user-info__property__chart
        - case @counter
        - when 0 then
          ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ 
        - when 1 then
          ■ ■ ■ ■ ■ ■ ■ ■ ■ □ 
        - when 2 then
          ■ ■ ■ ■ ■ ■ ■ ■ □ □ 
        - when 3 then
          ■ ■ ■ ■ ■ ■ ■ □ □ □ 
        - when 4 then
          ■ ■ ■ ■ ■ ■ □ □ □ □ 
        - when 5 then
          ■ ■ ■ ■ ■ □ □ □ □ □ 
        - when 6 then
          ■ ■ ■ ■ □ □ □ □ □ □ 
        - when 7 then
          ■ ■ ■ □ □ □ □ □ □ □ 
        - when 8 then
          ■ ■ □ □ □ □ □ □ □ □ 
        - when 9 then
          ■ □ □ □ □ □ □ □ □ □ 
        - when 10 then
          □ □ □ □ □ □ □ □ □ □ 
        - else
          □ □ □ □ □ □ □ □ □ □ 
      .left-contents__user-info__property__counter
        = "次のレベルまで #{@counter}pt"
    .left-contents__user-info__statuses
      %table.left-contents__user-info__statuses__status
        %tr
          %td
            HP
          %td
            10pt
        %tr
          %td
            攻撃
          %td
            5pt
        %tr
          %td
            防御
          %td
            5pt
      .left-contents__user-info__statuses__rest
        .left-contents__user-info__statuses__rest__counter
          残り 0pt
        = link_to "#", class: "left-contents__user-info__statuses__rest__deal-btn" do
          割り振る
    .left-contents__user-info__equipments
      %table.left-contents__user-info__equipments__equipment
        %tr
          %td
            武器
          %td
            ボーンソード
        %tr
          %td
            頭
          %td
            ボーンヘルム
        %tr
          %td
            胸
          %td
            ボーンメイル
        %tr
          %td
            腕
          %td
            ボーンアーム
        %tr
          %td
            腰
          %td
            ボーンコイル
        %tr
          %td
            足
          %td
            ボーングリーヴ
        %tr
          %td
            装飾品
          %td
            装備なし
  .left-contents__battle
    .left-contents__battle__degree
      初級
    = link_to "#", class: "left-contents__battle__challenge-battle-btn" do
      バトル
